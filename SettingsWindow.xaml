<Window x:Class="ChatGptApp.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatGptApp"
        Topmost="True"
        mc:Ignorable="d"
        WindowStyle="ToolWindow"
        WindowStartupLocation="CenterOwner"
        Title="Settings" Height="80" Width="400">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>

        </Grid.ColumnDefinitions>

        <Label Content="API Key:" VerticalAlignment="Center"/>
        <TextBox x:Name="apiKeyTextBox" Grid.Column="1" Margin="5,0"/>
        <Button Content="Save" Grid.Column="2" Click="SaveButton_Click" Padding="5"/>

    </Grid>
</Window>